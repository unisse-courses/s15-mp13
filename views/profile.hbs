<!DOCTYPE html>

<title> {{fullName}} (@{{username}})</title>

<div class="container">
    <div class="row">
        <div class="col-md-4" style="text-align: center; padding-bottom:10px;">
            
                <img class="rounded-circle" src="{{{displayPic}}}" style="width: 200px;height: 200px;">
                <h1  style="font-size: 28px;">{{fullName}}</h1>
                <h1  style="font-size: 20px;color: rgb(93,94,95);">@{{username}}</h1> <br> <br>
                <p style="width:auto">{{bio}}<br><br>&nbsp;<br></p>
            
            
        </div>
            
            <div class="col-md-8">
                <div>
                    <div class="container">
                        <div class="table-wrapper">
                            <div class="table-title">
                                <div class="row">
                                    <div class="col-sm-4"><h2>  Task <b>List</b></h2></div>
                                    <div class="col-sm-4" align="center8">
                                        <div class="search-box">
                                            <input type="text" id="tagsrch" class="form-control" placeholder="Search tagsâ€¦">
                                        </div>
                                    </div>
                                    
                                    <div class="col-sm-4" align="right">
                                    <div>
                                            <button type="button" id="addbtn" class="btn btn-info add-new" data-toggle="collapse" data-target="#addTask"><i class="fa fa-plus"></i> Add Task</button>
                                        </div>
                                    </div>
                                </div>
                            </div> 
                            
                            <br>

                            <!-- ADD TASK FORM -->
                            <div class="collapse" id="addTask">
                                <h4 style="padding-bottom: 5px;">Add a new task to your list!</h4>
                                <div class="addTaskContainer">
                                    <form method="post">
                                    <div class="border border-secondary rounded">
                                        <div class="row" style="padding: 10px;">
                                            <div class="col-sm-6">
                                                <input type="text" id="taskTitle"  placeholder="Title..." class="form-control">
                                        </div>
                                        </div>
                                        <div class="row" style="padding: 10px;">
                                            <div class="col">
                                                <textarea class="form-control" rows="5" maxlength="500" id="taskDesc" placeholder="Description" stye="resize:none; width:80%; margin: 5 auto;"></textarea>
                                            </div>
                                        </div>
                                        <div class="row" style="padding: 10px;">
                                            <div class="col-sm-7">
                                                <input type="text" id="taskTag1"  placeholder="Tag 1" class="form-control" maxlength="50">
                                            </div> <br><br>
                                            <div class="col-sm-7">
                                                <input type="text" id="taskTag2"  placeholder="Tag 2" class="form-control" maxlength="50">
                                            </div> <br><br>
                                            <div class="col-sm-7">
                                                <input type="text" id="taskTag3"  placeholder="Tag 3" class="form-control" maxlength="50">
                                            </div>
                                        </div>
                                        <div class="row" style="padding: 10px;">
                                            <div class="col">
                                                <div class="custom-control custom-control-inline">
                                                    <input type="checkbox" id="isRequested">
                                                    <label>Request Help</label>
                                                </div>
                                                <div class="custom-control custom-control-inline">
                                                    <input type="checkbox" id="isPrivate">
                                                    <label>Private</label>
                                                </div>
                                            </div>
                                            <p id="addTaskError" class="error"> {{addTaskError}} </p>
                                            <div class="col-sm-4" align="right">
                                                <div>
                                                    <button type="button" id="publishTaskBTN" class="btn btn-info add-new"><i class="fa fa-plus"></i> Publish</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    </form>
                                </div>
                            </div>


                            <table class="table table-striped table-hover table-bordered" style="margin-top: 10px;">
                                <thead>
                                    <tr>
                                        <th>Task  <i class="fa fa-sort"></i></th>
                                        <th>Date Added  <i class="fa fa-sort"></i></th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    {{#each tasks}}
                                    <tr>
                                        <td class="title">{{title}}</td>
                                        <td class="date">{{dateAdded}}</td>
                                        <td class="actions">
                                            <button id="completeBTN" class="complete" title="Mark Complete" data-toggle="tooltip"><i class="fa fa-check-square-o icon fa-lg"></i></button>
                                            <button id="commmentsBTN" onclick="window.location.href = '/view-comments/{{{taskID}}}'" class="view" title="View Comments" data-toggle="tooltip"><i class="fab fa-rocketchat icon fa-lg"></i></button>
                                            <button id="editBTN" onclick="window.location.href = '/edit-task/{{{taskID}}}'" class="edit" title="Edit" data-toggle="tooltip"><i class="fas fa-edit icon fa-lg"></i></button>
                                            <button id="deleteBTN" class="delete" title="Delete" data-toggle="tooltip" color=""><i class="fas fa-trash-alt icon fa-lg"></i></button>
                                        </td>
                                    </tr>
                                   {{/each}}
                                </tbody>
                            </table>
                          
                        </div>
                    </div>
                </div>
                
            </div>
    </div> <br>
</div>