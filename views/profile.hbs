                                <div class="addTaskContainer">
                                    <div class="border border-secondary rounded">
                                        <div class="row" style="padding: 10px;">
                                            <div class="col-sm-6">
                                                <input type="text" id="taskTitle"  placeholder="Title..." class="form-control">
                                        </div>
                                        </div>
                                        <div class="row" style="padding: 10px;">
                                            <div class="col">
                                                <textarea class="form-control" rows="5" maxlength="500" id="taskDesc" placeholder="Description" stye="resize:none; width:80%; margin: 5 auto;"></textarea>
                                            </div>
                                        </div>
                                        <div class="row" style="padding: 10px;">
                                            <div class="col-sm-7">
                                                <input type="text" id="taskTitle"  placeholder="Tags" class="form-control" maxlength="50">
                                            </div>
                                        </div>
                                        <div class="row" style="padding: 10px;">
                                            <div class="col">
                                                <div class="custom-control custom-checkbox custom-control-inline">
                                                    <input class="custom-control-input" type="checkbox" id="checkComplete" value="complete">
                                                    <label class="custom-control-label" for="checkComplete">Complete</label>
                                                </div>
                                                <div class="custom-control custom-checkbox custom-control-inline">
                                                    <input class="custom-control-input" type="checkbox" id="checkRequest" value="request">
                                                    <label class="custom-control-label" for="checkRequest">Request</label>
                                                </div>
                                                <div class="custom-control custom-checkbox custom-control-inline">
                                                    <input class="custom-control-input" type="checkbox" id="checkPrivate" value="private">
                                                    <label class="custom-control-label" for="checkPrivate">Private</label>
                                                </div>
                                            </div>
                                            <div class="col-sm-4" align="right">
                                                <div>
                                                    <button type="button" id="pubBtn" class="btn btn-info add-new" data-toggle="collapse" data-target="#addTask"><i class="fa fa-plus"></i> Publish</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <table class="table table-striped table-hover table-bordered" style="margin-top: 10px;">
                                <thead>
                                    <tr>
                                        <th>Task  <i class="fa fa-sort"></i></th>       <th>Date Added  <i class="fa fa-sort"></i></th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <tr>
                                        <td class="title">{{task}}</td>
                                        <td class="date">{{date-added}}</td>
                                        <td class="actions">
                                            <button id="completeBTN" onclick="MarkComplete()" class="complete" title="Mark Complete" data-toggle="tooltip"><i class="fa fa-check-square-o icon fa-lg"></i></button>
                                            <button id="commmentsBTN" onclick="ViewComments()" class="view" title="View Comments" data-toggle="tooltip"><i class="fab fa-rocketchat icon fa-lg"></i></button>
                                            <button id="editBTN" onclick="EditTask()"class="edit" title="Edit" data-toggle="tooltip"><i class="fas fa-edit icon fa-lg"></i></button>
                                            <button id="deleteBTN" onclick="Delete()"class="delete" title="Delete" data-toggle="tooltip" color=""><i class="fas fa-trash-alt icon fa-lg"></i></button>
                                        </td>
                                    </tr>
                                   
                                </tbody>
                            </table>
                          
