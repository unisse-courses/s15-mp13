<body>
    <div class="register-photo" style="margin-top: -25px;">
        <div class="form-container">
            <form method="post">
                <h2 class="text-center" style="font-family: Delius, cursive;line-height: 38px;font-size: 40px;"><strong>Registration</strong></h2><input class="form-control" type="text" placeholder="Name" required="">
                <div class="form-group"><input class="form-control" type="email" name="email" placeholder="Email" style="margin-top: 16px;" required=""></div><input class="form-control" type="text" placeholder="Username" required="">
                <div class="form-group"><input class="form-control" type="password" name="password" placeholder="Password" style="margin-top: 16px;" required=""></div>
                <div class="form-group"><input class="form-control" type="password" name="password-repeat" placeholder="Password (repeat)" required=""></div>
                <div class="form-group">
                    <div class="form-check"><label class="form-check-label"><input class="form-check-input" type="checkbox">I agree to the license terms.</label></div>
                </div>
                <div class="form-group"><button class="btn btn-primary btn-block" type="submit">Sign Up</button></div><a class="already" href="#">Already have an account? Login here.</a></form>
        </div>
    </div>
    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="/assets/js/script.min.js"></script>
